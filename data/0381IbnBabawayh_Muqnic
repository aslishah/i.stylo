# ٧ - عنه المختلف: ١٦٥، والذكري: ٢٥٧. وفي <a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٤٣٤ ح ٣ و ح ٤، و<a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٨٤ ذيل ح ٢٤، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ١٦١ ح ١٠، وص ٢٢٢ ذيل ح ٦٦، وص ٢٢٤ ح ٧٢، و<a href="/الكتب/1157_الاستبصار-ج-١">الاستبصار: ١</a> / ٢٣٩ ذيل ح ١، وص ٢٤٠ ح ٣ نحوه، عنها الوساءل: ٨ / ٥١٤ - ابواب <a href="/الكتب/431_صلاة-المسافر">صلاة المسافر</a> - ب ٢١ ح ٥، وص ٥١٥ ح ١٠ و ص ٥١٦ ح ١١.
# ٨ - انظر <a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٤٣٤ ح ١ وذيل ح ٢، و<a href="/الكتب /1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٧٩ ح ٢، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ١٦١ ح ١٠، وص ٢٢٤ ذيل ح ٧١ و ح ٧٥، وج ٤ / ٢٣٠ ح ٥١، و<a href="/الكتب/1157_الاستبصار-ج-١">الاستبصار: ١</a> / ٢٤٠ ذيل ح ٢ و ح ٣، عنها الوساءل: ٨ / ٥١٢ - ابواب <a href="/الكتب/431_صلاة-المسافر">صلاة المسافر</a> - ب 21 ح 1 و ح 10، وص 516 ذيل ح 12.
١ - <a href="/الكتب/1125_الكافي-ج-٤">الكافي: ٤</a> / ١٣١ ح ٢ مثله، وفي ح ١ و ح ٣، و<a href="/الكتب/1150_الفقيه-ج-٢">الفقيه: ٢</a> / ٩٢ ح ١٠، و<a href="/الكتب/1164_التهذيب-ج-٤">التهذيب: ٤</a> / ٢٢٨ ح ٤٦، و<a href="/الكتب/1158_الاستبصار-ج-٢">الاستبصار: ٢</a> / ٩٩ ح ٥ نحوه، عنها الوساءل: ١٠ / ١٨٥ - ابواب من يصح منه الصوم - ب ٥ ح ٢ - ح ٤.
# ٢ - «معصية» ا.
# ٣ - <a href="/الكتب/2_فقه-الرضا/الصفحة_0?pageno=162#top">فقه الرضا: ١٦٢</a>، و<a href="/الكتب/4_الهداية/الصفحة_0?pageno=33#top">الهداية: ٣٣</a> مثله. وفي <a href="/الكتب/1125_الكافي-ج-٤">الكافي: ٤</a> / ١٢٩ صدر ح ٣، و<a href="/الكتب/1150_الفقيه-ج-٢">الفقيه: ٢</a> / ٩٢ صدر ح ٧، و<a href="/الكتب/1164_التهذيب-ج-٤">التهذيب: ٤</a> / ٢١٩ صدر ح ١٥ باختلاف يسير، عنها الوساءل: ٨ / ٤٧٦ - ابواب <a href="/الكتب/431_صلاة- المسافر">صلاة المسافر</a> - ب ٨ ح ٣.
# ٤ - «وان» ا، ب.
# ٥ - البطر: الاشر، وهو شدة المرح «<a href="/الكتب/3939_لسان- العرب-ج-٤">لسان العرب: ٤</a> / ٦٩».
# ٦ - «تقوت» ج، المستدرك.
# ٧ - عنه المستدرك: ٦ / ٥٣٣ ح ٣. وفي <a href="/الكتب/2_فقه- الرضا/الصفحة_0?pageno=162#top">فقه الرضا: ١٦٢</a> باختلاف يسير. وفي <a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٤٣٨ ح ١٠، و<a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٨٨ ح ٤٧، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ٢١٧ ح ٤٧، و<a href="/الكتب/1157_الاستبصار-ج-١">الاستبصار: ١</a> / ٢٣٦ ح ٦ بمعناه، عنها الوساءل: ٨ / ٤٨٠ - ابواب <a href="/الكتب/431_صلاة-المسافر">صلاة المسافر</a> - ب 9 ح 5.
# وسياتي في ص 197 مثله.
# 8 - ليس في «ج».
١ - <a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٤٣٥ ح ١، و<a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٨٠ ح ٥، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ٢١٩ ح ٥٥ و ح ٥٧، وص ٢٢٠ ح ٥٨ و ح ٦٠، وج ٤ / ٢٢٧ ح ٤١، و<a href="/الكتب/1157_الاستبصار-ج-١">الاستبصار: ١</a> / ٢٣٧ ح ١، وص ٢٣٨ ح ٤ نحوه، وكذا في <a href="/الكتب/51_السراءر-ج-٣">السراءر: ٣</a> / ٥٨٦، نقلا عن كتاب حريز بن عبد الله، عنها الوساءل:
# ٨ / ٥٠٠ - ابواب <a href="/الكتب/431_صلاة-المسافر">صلاة المسافر</a> - ضمن ب ١٥.
# ٢ - الظواهر: اشراف الارض، «<a href="/الكتب/3939_لسان-العرب-ج-٤">لسان العرب: ٤</a> / ٥٢٤».
# ٣ - «من» ج، د.
# ٤ - <a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٣٨٨ ضمن ح ٥، و<a href="/الكتب/1162_التهذيب-ج-٢">التهذيب: ٢</a> / ٢٢٠ ح ٧٣ مثله، وفي <a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٣٨٩ ذيل ح ١٠، و<a href="/الكتب/1162_التهذيب-ج-٢">التهذيب: ٢</a> / ٣٧٥ ذيل ح ٩٢ باختلاف يسير، وفي المحاسن: ٣٦٥ ذيل ح ١٠٩ ذيله، عنها الوساءل: ٥ / ١٤٧ - ابواب مكان المصلي - ب ١٩ ح ١ و ح ٢ و ح ١٠.
# ٥ - عنه البحار: ٨٩ / ٣٣ ح ١١، والوساءل: ٨ / ٤٧٩ - ابواب <a href="/الكتب/431_صلاة-المسافر">صلاة المسافر</a> - ب ٩ ح ٣ وعن <a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٨٨ ح ٤٨، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب:
# ٣</a> / ٢١٨ ح ٥١، و<a href="/الكتب/1157_الاستبصار-ج-١">الاستبصار: ١</a> / ٥٣٦ ح ٥ مثله.
# ذكر الشيخ ان الوجه فيه، من كان صيده لقوته وقوت عياله، فاما من كان صيده للهو فلا يجوز له التقصير.
# ٦ - «قوم» ا، د.
# ٧ - <a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ١٦٥ ح ٢١، وص ٢٢٦ ح ٨٢ باختلاف يسير، وفي المحاسن: ٣٣٦ ح ٧٧ نحوه، عنهما الوساءل: ٨ / ٣٢٩ - ابواب <a href="/الكتب/430_صلاة-الجماعة">صلاة الجماعة</a> - ب 18 ح 4، وص 331 ح 8.
# 8 - ليس في «ا» و «المستدرك».
١ - ليس في «ج».
# ٢ - عنه المستدرك: ٦ / ٥٤٤ ح ١. وفي <a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٨٩ ذيل ح ٤٩، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ٢٣٠ ح ١٠٣ مثله. وفي عيون الاخبار: ٢ / ١٨١ ضمن ح ٥ باختلاف يسير، عنه الوساءل: ٨ / ٥٢٣ - ابواب <a href="/الكتب/431_صلاة-المسافر">صلاة المسافر</a> - ب ٢٤ ح ٢.
# ٣ - عنه المستدرك : ٦ / ٤٣٥ ح ١ وعن <a href="/الكتب/2_فقه- الرضا/الصفحة_0?pageno=162#top">فقه الرضا: ١٦٢</a> باختلاف يسير. وفي <a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٤٣٥ ح ٧ و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ١٦٢ ح ١١ باختلاف يسير، عنهما الوساءل: ٨ / ٢٦٨ - ابواب قضاء الصلوات - ب ٦ ح ١. وفي <a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ١٦٢ ح ١٢ بمعناه.
# ٤ - عنه البحار: ٨٩ / ٦٣ ذيل ح ٣١ وعن عقاب الاعمال: ٣٢٩ ح ١ مثله، وفي الوساءل: ٨ / ٥١٨ - ابواب <a href="/الكتب/431_صلاة-المسافر">صلاة المسافر</a> - ب ٢٢ ح ٣ عنه وعن <a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٨١ ح ٨ مثله، وفي <a href="/الكتب/1164_التهذيب-ج-٤">التهذيب: ٤</a> / ٢١٨ ح ٨ مثله.
# ٥ - عنه البحار: ٨٩ / ٦٣ ح ٣١ وعن <a href="/الكتب/1138_ثواب- الاعمال/الصفحة_0?pageno=58#top">ثواب الاعمال: ٥٨</a> ح ١ مثله، وكذا في الوساءل: ٨ / ٥١٩ - ابواب <a href="/الكتب/431_صلاة-المسافر">صلاة المسافر</a> - ب ٢٢ ح ٦ عنه وعن <a href="/الكتب/1125_الكافي-ج-٤">الكافي: ٤</a> / ١٢٧ صدر ح ٤، و<a href="/الكتب/1150_الفقيه-ج-٢">الفقيه: ٢</a> / ٩١ صدر ح ٦.
# ٦ - «واذا» المختلف.
# ٧ - عنه المختلف: ١٦٤، و الذكري: ٢٦١. وفي <a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٨١ ح ١٠، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ١٦٩ ح ٣٤، وص ٢٢٥ ح ٧٩، و<a href="/الكتب/1157_الاستبصار-ج-١">الاستبصار:
# ١</a> / ٢٤١ ح ٢ باختلاف يسير في اللفظ، عنها الوساءل: ٨ / ٥٠٦ - ابواب <a href="/الكتب/431_صلاة-المسافر">صلاة المسافر</a> - ب 17 ح 2.
١ - عنه المستدرك: ٦ / ٥٢١ صدر ح ٤. وفي <a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٤٥٩ ح ٦، و<a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٩٥ ح ١٢، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ١٧٣ ح ٥ نحوه، عنها الوساءل: ٨ / ٤٤١ - ابواب صلاة الخوف والمطاردة - ب ٣ ح ٨. وفي <a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٢٩٤ ح ٢ بمعناه.
# ٢ - عنه المستدرك: ٦ / ٥٢١ ذيل ح ٤. وانظر <a href="/الكتب/1114_مساءل- علي-بن-جعفر/الصفحة_0?pageno=173#top">مساءل علي بن جعفر: ١٧٣</a> ح ٣٠٢، و<a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٤٥٧ ح ٦، وص ٤٥٩ ح ٧ ، و<a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ١٨١ ذيل ح ١٧، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / 299 ح 3، وص 300 ح 6، عن بعضها الوساءل: 8 / 439 - ابواب صلاة الخوف والمطاردة - ضمن ب 3.
١ - «وتجء» الوساءل، المستدرك.
# ٢ - «عنده» ا، د.
# ٣ - ليس في «ب».
# ٤ - عنه البحار: ٨٩ / ١٠٤ ح ١، والمستدرك: ٦ / ٥١٩ ح ٦، وفي الوساءل: ٨ / ٤٣٦ - ابواب صلاة الخوف والمطاردة - ب ٢ ح ٤ عنه وعن <a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٤٥٥ صدر ح ١، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / ١٧١ صدر ح ١ مثله.
# ٥ - «تساتنف» ا، ب، د، البحار.
# ٦ - «مقام» ا.
# ٧ - عنه البحار: ٨٩ / ١٠٥ ذيل ح ١، والمستدرك: ٦ / ٥٢٣ ح ٩. وفي <a href="/الكتب/2_فقه-الرضا/الصفحة_0?pageno=150#top">فقه الرضا: ١٥٠</a> مثله. وفي <a href="/الكتب/2335_تفسير-العياشي-ج-١">تفسير العياشي: ١</a> / ٢٧٢ ح ٢٥٧، و<a href="/الكتب/1124_الكافي-ج-٣">الكافي: ٣</a> / ٤٥٧ ح ٢، و<a href="/الكتب/1163_التهذيب-ج-٣">التهذيب: ٣</a> / 173 ح 1 نحوه، عنها الوساءل: 8 / 445 - ابواب صلاة الخوف والمطاردة - ب 4 ح 8.
١ - الاسراء: ٧٩.
# ٢ - <a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٣٠٧ نحوه. ويءيده ما في <a href="/الكتب/1162_التهذيب-ج-٢">التهذيب ٢</a> / ٢٤٧ ح ٢٨، عنه البحار: ٨٧ / ١٢٢.
# ٣ - عنه الوساءل: ٨ / ١٤٥ - ابواب بقية الصلوات المندوبة - ب ٣٩ ح ١ وعن <a href="/الكتب/1129_الكافي-ج-٨">الكافي: ٨</a> / ٧٩ ضمن ح ٣٣، و<a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٣٠٧ ح ١ مثله. وفي <a href="/الكتب/11_المقنعة/الصفحة_0?pageno=119#top">المقنعة: ١١٩</a>، و<a href="/الكتب/1169_التهذيب-ج-٩">التهذيب: ٩</a> / ١٧٦ ضمن ح ١٣ مثله.
# ٤ - عنه الوساءل: ٨ / ١٤٨ - ابواب بقية الصلوات المندوبة - ب ٣٩ ح ٨ وعن المحاسن: ٥٣ ح ٧٩، و<a href="/الكتب/1149_الفقيه-ج-١">الفقيه: ١</a> / ٣٠٠ ح ١١، وعلل الشراءع: ٣٦٣ ح ٤، و<a href="/الكتب/1162_التهذيب-ج-٢">التهذيب: ٢</a> / ١١٩ ح ٢١٧ مثله.
