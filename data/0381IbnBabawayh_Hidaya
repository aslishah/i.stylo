# ٥ - عنه البحار: ٦٦ / ٣٩ صدر ح ٢٠، والمستدرك: ١٦ / ١٨٩ صدر ح ٢. <a href="/الكتب/1151_الفقيه-ج-٣">الفقيه: ٣</a> / ٢١٩ ح ١٠٠، و<a href="/الكتب/1137_الخصال/الصفحة_0?pageno=433#top">الخصال: ٤٣٣</a> ح ١٨، و<a href="/الكتب/3_المقنع/الصفحة_0?pageno=425#top">المقنع: ٤٢٥</a> مثله، وكذا في المختلف: ٦٨٢ نقلا عن المصنف، وفي <a href="/الكتب/1127_الكافي-ج-٦">الكافي: ٦</a> / ٢٥٤ ح ٣، و<a href="/الكتب/1169_التهذيب-ج-٩">التهذيب: ٩</a> / ٧٤ ح ٥١ باختلاف يسير، وفي المحاسن: ٤٧١ ح ٤٦٣، وضمن ح ٤٦٤، وعلل الشراءع: ٥٦٢ ضمن ح ١ نحوه، عن معظمها الوساءل: ٢٤ / ١٧١ - ابواب الاطعمة المحرمة - ضمن ب ٣١.
# ٦ - عنه البحار: ٦٦ / ٣٩ ذيل ح ٢٠، والمستدرك: ١٦ / ١٨٩ ذيل ح ٢. <a href="/الكتب/1137_الخصال/الصفحة_0?pageno=434#top">الخصال: ٤٣٤</a> ذيل ح ١٨ مثله، وكذا في المختلف ٦٨٢ نقلا عن المصنف، وفي الوساءل: ٢٤ / ١٧٧ - ابواب الاطعمة المحرمة - ب ٣١ ح ١٦ نقلا عن <a href="/الكتب/3_المقنع">المقنع</a>، ولم نجده في النسخ الخطية التي عندنا.
# 7 - " في " ب، د.
١ - انفحة الجدي: شء يخرج من بطنه، اصغر يعصر في صوفة مبتلة في اللبن فيغلظ كالجبن " <a href="/الكتب/3937_لسان-العرب-ج-٢">لسان العرب: ٢</a> / ٦٢٤ ".
# ٢ - عنه البحار: ٦٦ / ٥٢ ح ١١، والمستدرك: ١٦ / ١٩٠ ح ١. <a href="/الكتب/1137_الخصال/الصفحة_0?pageno=434#top">الخصال: ٤٣٤</a> ح ١٩ مثله، وفي المحاسن: ٤٧١ ذيل ح ٤٦٤، وعلل الشراءع: ٥٦٢ ذيل ح ١ نحوه، عنهما الوساءل: ٢٤ / ١٧٥ - ابواب الاطعمة المحرمة - ب ٣١ ذيل ح ١١، و ص ١٧٧ ذيل ح ٢٠.
# ٣ - " كل ما " ب، ج، البحار.
# ٤ - عنه البحار: ٦٥ / ٢٩١ صدر ح ٥٤. قرب الاسناد: ٨١ ذيل ح ٢٦٤ باختلاف يسير، وفي <a href="/الكتب/1127_الكافي-ج-٦">الكافي:
# ٦</a> / ٢٠٥ ح ١٤ وذيل ح ١٥، و<a href="/الكتب/1151_الفقيه-ج-٣">الفقيه: ٣</a> / ٢٠١ صدر ح ١، و<a href="/الكتب/1169_التهذيب-ج-٩">التهذيب: ٩</a> / ٢٤ ح ٩٨، و ص ٢٥ ذيل ح ٩٩، و<a href="/الكتب/1160_الاستبصار-ج-٤">الاستبصار: ٤</a> / ٦٨ ح ٦ وذيل ح ٧ نحوه، عنها الوساءل: ٢٣ / ٣٣٥ - ابواب الصيد - ب ٢ ح ٧، و ص ٣٣٦ ح ١١ و ح ١٢.
# ٥ - " ولم " ج، البحار، " وان " د.
